{
  "scopeName": "source.supercode",
  "name": "SuperCode",
  "fileTypes": ["sc","supercode"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#control-flow" },
    { "include": "#functions" },
    { "include": "#data-types" },
    { "include": "#builtins" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.supercode",
          "match": "//.*$"
        },
        {
          "name": "comment.block.supercode",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "match": "." }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.supercode",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.supercode",
              "match": "\\\\(?:[ntrfbv\"\\\\]|[0-7]{1,3}|u[0-9A-Fa-f]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.supercode",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.supercode",
          "match": "\\b0[xX][0-9A-Fa-f]+\\b"
        },
        {
          "name": "constant.numeric.integer.supercode",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.supercode",
          "match": "\\b(fnc|grp|map|arr|const)\\b"
        },
        {
          "name": "keyword.type.supercode",
          "match": "\\b(int|byte|char|deci|string|void)\\b"
        },
        {
          "name": "keyword.control.supercode",
          "match": "\\b(if|else|else\\s+if|while|loop|break|continue|get)\\b"
        },
        {
          "name": "keyword.operator.supercode",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "control-flow": {
      "patterns": [
        {
          "name": "keyword.control.conditional.supercode",
          "match": "\\b(if|else)\\b"
        },
        {
          "name": "keyword.control.loop.supercode",
          "match": "\\b(while|loop|break|continue)\\b"
        },
        {
          "name": "keyword.control.return.supercode",
          "match": "\\b(get|return)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.definition.supercode",
          "begin": "\\b(fnc)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\[)",
          "beginCaptures": {
            "1": { "name": "keyword.declaration.supercode" },
            "2": { "name": "entity.name.function.supercode" },
            "3": { "name": "punctuation.bracket.square.open.supercode" }
          },
          "end": "(\\]\\s*::\\s*(?:int|byte|char|deci|string|void|arr|grp|map)\\b)",
          "endCaptures": {
            "1": { "name": "keyword.type.supercode" }
          },
          "patterns": [
            { "include": "#comments" },
            {
              "name": "variable.parameter.supercode",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            }
          ]
        },
        {
          "name": "meta.function.call.supercode",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\[)",
          "captures": {
            "1": { "name": "entity.name.function.supercode" }
          }
        }
      ]
    },
    "data-types": {
      "patterns": [
        {
          "name": "meta.array.supercode",
          "begin": "\\b(arr)\\s*(\\{)",
          "beginCaptures": {
            "1": { "name": "keyword.declaration.supercode" },
            "2": { "name": "punctuation.bracket.curly.open.supercode" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.bracket.curly.close.supercode" }
          },
          "patterns": [
            { "include": "#keywords" },
            { "include": "#numbers" },
            { "match": "," }
          ]
        },
        {
          "name": "meta.group.supercode",
          "begin": "\\b(grp)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\{)",
          "beginCaptures": {
            "1": { "name": "keyword.declaration.supercode" },
            "2": { "name": "entity.name.class.supercode" },
            "3": { "name": "punctuation.bracket.curly.open.supercode" }
          },
          "end": "\\}",
          "endCaptures": {
            "0": { "name": "punctuation.bracket.curly.close.supercode" }
          },
          "patterns": [
            { "include": "#comments" },
            { "include": "#keywords" },
            {
              "name": "variable.member.supercode",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            },
            { "match": "[,:]" }
          ]
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.supercode",
          "match": "@\\b(open|close|read|write|strlen|malloc|free|addr|peek|poke)\\b"
        },
        {
          "name": "support.function.io.supercode",
          "match": "\\b(print|show)\\b(?=\\s*\\[)"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.supercode",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.comparison.supercode",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.supercode",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.supercode",
          "match": "(&|\\||\\^|~|<<|>>)"
        },
        {
          "name": "keyword.operator.assignment.supercode",
          "match": "="
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.bracket.square.open.supercode",
          "match": "\\["
        },
        {
          "name": "punctuation.bracket.square.close.supercode",
          "match": "\\]"
        },
        {
          "name": "punctuation.bracket.curly.open.supercode",
          "match": "\\{"
        },
        {
          "name": "punctuation.bracket.curly.close.supercode",
          "match": "\\}"
        },
        {
          "name": "punctuation.bracket.round.open.supercode",
          "match": "\\("
        },
        {
          "name": "punctuation.bracket.round.close.supercode",
          "match": "\\)"
        },
        {
          "name": "punctuation.separator.comma.supercode",
          "match": ","
        },
        {
          "name": "punctuation.separator.semicolon.supercode",
          "match": ";"
        },
        {
          "name": "punctuation.accessor.dot.supercode",
          "match": "\\."
        },
        {
          "name": "punctuation.separator.colon.supercode",
          "match": ":"
        }
      ]
    }
  }
}
